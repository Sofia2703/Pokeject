<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.sofia.pokeject.selectrank"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnHardRank"
        android:layout_width="213dp"
        android:layout_height="73dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/rha"
        app:layout_constraintBottom_toTopOf="@+id/btnBackRank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnBackRank"
        android:layout_width="213dp"
        android:layout_height="73dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/backmod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnHardRank"
        app:layout_constraintRight_toRightOf="@+id/btnHardRank"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnEasyRank"
        android:layout_width="213dp"
        android:layout_height="73dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rea"
        app:layout_constraintBottom_toTopOf="@+id/btnHardRank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
</android.support.constraint.ConstraintLayout>
