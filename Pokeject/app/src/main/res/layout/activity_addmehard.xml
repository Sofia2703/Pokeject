<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgis"
    tools:context="com.example.sofia.pokeject.addmehard"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/whitebg"
        android:orientation="vertical" >

    </LinearLayout>

    <ImageView
        android:id="@+id/gis"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="113dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/endgame" />

    <AutoCompleteTextView
        android:id="@+id/inputNameHard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/gis"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/whith"
        android:drawableLeft="@drawable/ic_green"
        android:drawablePadding="5dp"
        android:hint="name"
        android:paddingStart="10dp"
        android:textSize="17dp" />

    <ImageButton
        android:id="@+id/btnclearHard"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/inputNameHard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:src="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/btnSaveHard"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/gis"
        android:layout_gravity="center"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="150dp"
        android:text="Save and Play" />

    <Button
        android:id="@+id/btnCancelHard"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="452dp"
        android:layout_toEndOf="@+id/btnSaveHard"
        android:layout_toRightOf="@+id/btnSaveHard"
        android:onClick="addHard"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Cancel" />

    <TextView
        android:id="@+id/MyScoreHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSaveHard"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:text="00"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSaveHard"
        android:layout_centerVertical="false"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="282dp"
        android:text="Score"
        android:textSize="20sp" />




</RelativeLayout>
